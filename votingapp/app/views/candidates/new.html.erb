<h1>Add New Candidate</h1>
<%= simple_form_for @candidate do |p| %>
	<%= p.input :position_id, as: :select, collection: Position.all, label: "Position", error: 'Position is required.', label_method: lambda {|x| "#{Position.find(x).name}"}, required: true %>
	<%= p.input :first_name, error: 'Field is required.', required: true %>
	<%= p.input :last_name, error: 'Field is required.', required: true %>
	<%= p.input :slogan, error: 'Slogan must be unique.', required: true, uniqueness: true %>
	<%= p.button :submit %>
<% end %>
